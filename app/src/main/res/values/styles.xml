<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="loginTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorUnselect</item>
        <item name="colorControlActivated">@color/colorSelect</item>
    </style>

    <style name="signUpTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorUnselect</item>
        <item name="colorControlActivated">@color/colorSelectBlue</item>
    </style>
</resources>
