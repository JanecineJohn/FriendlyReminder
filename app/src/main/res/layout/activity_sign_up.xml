<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xin.friendlyreminder.activities.signUpActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/sign_up"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="注册"
        android:textSize="40sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:theme="@style/signUpTheme">
        <EditText
            android:id="@+id/userName_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写用户名"/>
        <EditText
            android:id="@+id/password_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写密码"/>
        <EditText
            android:id="@+id/userPhone_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写您的电话号码"/>
    </LinearLayout>

    <com.lid.lib.LabelButtonView
        android:id="@+id/signUp"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorSelectBlue"
        android:gravity="center"
        android:text="注册"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        app:label_backgroundColor="@color/colorSelect"
        app:label_orientation="RIGHT_TOP"
        app:label_distance="32dp"
        app:label_text="SIGNUP"
        app:label_textStyle="BOLD"/>

</LinearLayout>
